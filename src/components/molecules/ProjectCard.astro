---
import Image from "astro/components/Image.astro";

interface Props {
  name: string;
  description: string;
  image: string;
  url: string;
  id: number;
}

const { name, description, image, url, id } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---

<article>
  <div>
    <h2>{name}</h2>
    <p>{description}</p>
    <a href={`${baseUrl}${url}`}>View project</a>
  </div>
  <Image src={image} alt={name} inferSize={true} />
</article>
<style>
  article {
    position: relative;
    display: grid;
    place-items: center;
    width: clamp(300px, 25%, 800px);
    aspect-ratio: 1 / 1;
    flex-grow: 1;
    background-image: linear-gradient(
      to bottom,
      var(--primary-1),
      var(--primary-0)
    );
  }
  div {
    padding: 1rem;
    font-weight: 200;
  }

  h2 {
    font-size: var(--fs-m);
    font-weight: 400;
  }

  img {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.5s;
    pointer-events: none;
  }
  article:hover img,
  article:focus-within img {
    opacity: 0;
  }
</style>
