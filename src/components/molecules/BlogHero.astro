---
import { Image } from "astro:assets";

import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  description: string;
  banner: ImageMetadata;
}

const { title, description, banner } = Astro.props;
---

<header class="education-header">
  <h1>{title}</h1>
  <p>{description}</p>
  <Image src={banner} alt={`${title}`} />
</header>
<style>
  h1 {
    font-size: var(--fs-xl);
    font-weight: 600;
    text-align: center;
    padding: var(--fs-s);
  }
  img {
    width: 100%;
    height: 50vh;
    object-fit: cover;
    object-position: right;
  }
  p {
    max-width: 1240px;
    text-align: center;
    font-size: var(--fs-m);
    font-weight: 400;
    margin: 0 auto;
    padding: var(--fs-s);
  }
</style>
