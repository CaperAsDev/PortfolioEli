---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  description: string;
  banner: ImageMetadata;
  iconName: string;
}

const { title, description, banner, iconName } = Astro.props;
---

<header class="education-header">
  <div class="top">
    <h1>
      <Icon name={`tabler:${iconName}`} />
      {title}
    </h1>
    <p>{description}</p>
  </div>
  <Image src={banner} alt={`${title}`} />
</header>
<style>
  header {
    position: relative;
    width: 100%;
    height: fit-content;
  }
  .top {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 100%;
    height: 100%;
    backdrop-filter: brightness(40%);
    color: var(--light);
  }
  h1 {
    display: flex;
    align-items: center;
    gap: var(--fs-s);
    text-align: center;
    color: inherit;
    font-size: var(--fs-xl);
    font-weight: 600;
    padding: var(--fs-s);

    svg {
      width: calc(var(--fs-xl) * 1.5);
      height: calc(var(--fs-xl) * 1.5);
    }
  }
  p {
    color: inherit;
    max-width: 1240px;
    font-size: var(--fs-s);
    margin: 0 auto;
    padding: var(--fs-s);
  }
  img {
    width: 100%;
    height: 50vh;
    object-fit: cover;
    object-position: right;
  }

  @media screen and (width >= 768px) {
    h1 {
      text-align: left;
      margin-inline: var(--fs-xl);
    }
    p {
      font-size: var(--fs-m);
      max-width: 80%;
    }
  }
</style>
