---
import Image from "astro/components/Image.astro";
import Focus from "@/assets/images/FOCUS4PFAS.jpg";
import Logo from "@/assets/images/BTS_LogoC-V.svg";
---

<footer>
  <div class="info-wrapper">
    <div class="info">
      <Image src={Logo} alt={"Bridge to Science LOGO"} width={200} />
      <div class="contact">
        <p class="name">By Elisabeth Cuervo</p>
        <a href="mailto:Fake@mail.com">Fake@mail.com</a>
      </div>
    </div>
    <div class="sponsor">
      <Image src={Focus} alt={"Focus for PFAS LOGO"} />
    </div>
  </div>
  <p>Â© 2025, All rights reserved.</p>
</footer>

<style>
  footer {
    display: grid;
    width: 100%;
    margin-top: calc(var(--fs-xl) * 2);
    border-top: 1px solid oklch(from var(--primary-0) l c h / 1);
    place-items: center;
    background-color: oklch(from var(--primary-0) l c h / 0.2);
  }
  .info-wrapper {
    width: 100%;
    padding: 1rem;
    display: flex;
    justify-content: space-between;
  }
  .info {
    display: flex;
    gap: 1rem;
    align-items: end;
  }
  .name {
    font-weight: 600;
    font-size: var(--fs-s);
  }
  a {
    font-weight: 200;
    text-decoration: underline;
  }

  img {
    mix-blend-mode: multiply;
  }
</style>
