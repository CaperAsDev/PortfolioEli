---
interface Props {
  href: string;
  text: string;
  target?: string;
}

function normalizeString(str: string): string {
  if (str === "/") return str;
  return str.toLowerCase().replace(/^[^a-z0-9]+|[^a-z0-9]+$/gi, "");
}

const { href, text, target = "_self" } = Astro.props;

const currentPage = normalizeString(Astro.url.pathname);
const normalizedHref = normalizeString(href);
---

<a
  href={href}
  aria-current={currentPage == normalizedHref}
  target={target}
  rel="noopener noreferrer">{text}</a
>
<style>
  @property --angle {
    syntax: "<angle>";
    inherits: false;
    initial-value: 0deg;
  }
  a {
    height: fit-content;
    font-size: var(--fs-s);
    text-wrap: nowrap;
    border-bottom: 2px solid transparent;
    border-image: conic-gradient(
        from var(--angle),
        var(--secondary-0) 90deg,
        transparent 90deg 270deg,
        var(--secondary-0) 270deg
      )
      1;
  }
  @keyframes underline {
    to {
      --angle: -180deg;
    }
  }
  a:hover,
  a:focus,
  a:active,
  a[aria-current="true"] {
    animation: underline 0.3s linear forwards;
  }
</style>
