---
import Layout from "./Layout.astro";
---

<Layout>
  <div class="container">
    <slot name="breadcrumb" />
    <slot name="aside" />
    <main class="blog-layout">
      <slot />
    </main>
  </div>
</Layout>

<style>
  .container {
    display: grid;
    place-items: center;

    .hashes {
      display: flex;
      justify-content: space-between;
    }

    nav {
    }
    aside {
      margin: var(--fs-xs);
    }
    main {
    }
  }
  .blog-layout {
    padding: var(--fs-s);
    margin: 0 auto;

    h1 {
      font-size: var(--fs-xl);
      font-weight: 600;
      text-align: center;
      padding: var(--fs-s);
    }

    h2 {
      font-size: var(--fs-l);
      font-weight: 400;
      text-align: start;
    }
    h3 {
      font-size: var(--fs-m);
      font-weight: 400;
      text-align: start;
    }

    a {
      text-decoration: underline;
    }

    p {
      margin: 0;
      padding: var(--fs-xs);
    }

    ul:not([class]) {
      list-style-type: disc;
      margin-inline-start: calc(var(--fs-m));
    }

    li {
      padding-inline-start: var(--fs-s);
      font-size: var(--fs-s);
    }

    img {
      max-width: 100%;
      height: auto;
      margin: var(--fs-xs) 0;
    }

    figure {
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
      padding: var(--fs-xs);
      gap: var(--fs-xs);

      & > :is(img, video) {
        width: clamp(300px, 90%, 1200px);
        height: auto;
        max-height: 90dvh;
        object-fit: cover;
      }

      figcaption {
        display: block;
        width: 100%;
        font-size: var(--fs-xs);
        text-align: center;
      }
    }
  }
  @media screen and (width >= 768px) {
    .container {
      nav {
        justify-self: start;
        margin-inline-start: var(--fs-xl);
      }

      .hashes {
        justify-content: center;
        gap: var(--fs-m);
      }
    }
  }
  @media screen and (width >= 1024px) {
    .container {
      main {
        max-width: 90%;
      }
    }
  }
  @media screen and (width >= 1440px) {
    .container {
      grid-template-columns: auto 1fr;

      nav {
        grid-column: span 2;
      }

      .hashes {
        justify-content: flex-end;
      }

      aside {
        align-self: flex-start;
        margin: var(--fs-xl);
        margin-top: calc(var(--fs-xl) * 2);
      }

      main {
        max-width: 1440px;
      }
    }
  }
</style>
